{
  "name": "teamneusta/windowsazurecurl",
  "description": "This project provides a set of PHP client libraries that make it easy to access Windows Azure with curl",
  "keywords": [ "php", "azure", "sdk", "curl" ],
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Benjamin Kluge",
      "email": "b.kluge@neusta.de"
    }
  ],
  "repositories": [
    {
      "url": "https://github.com/kazumihirose/azure-sdk-for-php.git",
      "type": "git"
    }
  ],
  "require": {
    "php": ">=5.4",
    "ext-curl": "*",
    "php-curl-class/php-curl-class": "^3.5"
  },

  "require-dev": {
    "phpunit/phpunit": "4.5.*",
    "mikey179/vfsStream": "1.3.*"
  },

  "autoload": {
    "psr-4": {
      "TeamNeusta\\WindowsAzureCurl\\": "src/"
    }
  }

}

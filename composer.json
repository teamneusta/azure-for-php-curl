{
  "name": "bennsel/windowsazurecurl",
  "description": "This project provides a set of PHP client libraries that make it easy to access Windows Azure with curl",
  "keywords": [ "php", "azure", "sdk", "curl" ],
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Azure PHP Curl",
      "email": "benjamin@kluge.me"
    }
  ],
  "repositories": [
    {
      "url": "https://github.com/kazumihirose/azure-sdk-for-php.git",
      "type": "git"
    },
    {
      "type": "pear",
      "url": "http://pear.php.net"
    }
  ],
  "require": {
    "php": ">=5.4",
    "ext-curl": "*",
    "php-curl-class/php-curl-class": "^3.5"
  },

  "require-dev": {
    "phpunit/phpunit": "4.5.*",
    "mikey179/vfsStream": "1.3.*",
    "microsoft/windowsazure": "dev-dev",
    "pear-pear.php.net/http_request2": "*",
    "pear-pear.php.net/mail_mime": "*",
    "pear-pear.php.net/mail_mimedecode": "*"
  },

  "autoload": {
    "psr-4": {
      "Bennsel\\WindowsAzureCurl\\": "src/"
    }
  }

}
